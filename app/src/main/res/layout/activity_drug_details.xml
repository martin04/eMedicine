<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">

    <RelativeLayout
        android:id="@+id/relView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtContraindications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="@string/contraindication_tag"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <TableLayout
            android:id="@+id/tblContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtContraindications"
            android:layout_below="@+id/txtContraindications"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="30dp">

        </TableLayout>

        <TextView
            android:id="@+id/txtAdvices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tblContra"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="@string/advice_tag"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <TableLayout
            android:id="@+id/tblAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtAdvices"
            android:layout_below="@+id/txtAdvices"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="30dp">

        </TableLayout>
    </RelativeLayout>

</ScrollView>