<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txtContraindications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOI"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtOI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDrugDrug"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/other_ind"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDrugDrug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDD"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/drug_drug_ind"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>